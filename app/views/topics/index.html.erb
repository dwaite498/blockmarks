<h1>All Blockmarks</h1>
<div class="wrapper">
    <% @topics.each do |f| %>
        <div class="topic-container">
            <h4><%=link_to f.title, topic_url(f) %>
            <% if f.user == current_user %>
                <%= link_to "", topic_url(f), :remote => true, method: :delete, class: 'glyphicon glyphicon-remove delete_item' %>
            <% end %></h4>
                <% f.bookmarks[0..4].each do |b| %>
                    <ul>
                        <li><%= b.url %></li>
                    </ul>
            <% end %>
        </div>
    <% end %>
</div>